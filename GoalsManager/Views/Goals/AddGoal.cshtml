@model GoalsManager.Goal
@using GoalsManager
@using GoalsManager.Extensions

@{
    ViewData["Title"] = "AddGoal";
}

<h1>Добавить цель</h1>

<h4>Goal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-route="AddGoalAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()">
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group" class="control-label"></label>
                <input asp-for="Group" class="form-control" />
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTimeStart" class="control-label"></label>
                <input asp-for="DateTimeStart" class="form-control" value="@DateTime.Now.ToDateTimeLocalInputFormat()" />
                <span asp-validation-for="DateTimeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTimeEnd" class="control-label"></label>
                <input asp-for="DateTimeEnd" class="form-control" value="@DateTime.Now.ToDateTimeLocalInputFormat()" />
                <span asp-validation-for="DateTimeEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route="GoalsView">Back to List</a>
</div>

