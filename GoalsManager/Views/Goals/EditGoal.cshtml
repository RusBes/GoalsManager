@model GoalsManager.Goal
@using GoalsManager
@using GoalsManager.Extensions

@{
	ViewData["Title"] = "EditGoalView";
}

<header>
	<h1>Edit goal</h1>
</header>
<div class="row">
	<div class="col-md-4">
		<form asp-route="EditGoalAction">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="GoalId" />
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" value="@Model.Name" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Status" class="control-label"></label>
				<select asp-for="Status" class="form-control" value="@Model.Status" asp-items="Html.GetEnumSelectList<Status>()"></select>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Group" class="control-label"></label>
				<input asp-for="Group" class="form-control" value="@Model.Group" />
				<span asp-validation-for="Group" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DateTimeStart" class="control-label"></label>
				<input asp-for="DateTimeStart" class="form-control" value="@Model.DateTimeStart?.ToDateTimeLocalInputFormat()" />
				<span asp-validation-for="DateTimeStart" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DateTimeEnd" class="control-label"></label>
				<input asp-for="DateTimeEnd" class="form-control" value="@Model.DateTimeEnd?.ToDateTimeLocalInputFormat()" />
				<span asp-validation-for="DateTimeEnd" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>
